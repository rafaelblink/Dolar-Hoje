{
  "manifest_version": 2,
  "name": "Dólar Hoje",
  "description": "Extensão para te manter informado sobre o valor do dolar diariamente.",
  "version": "1.3",
  "content_security_policy": "script-src 'self' https://api.promasters.net.br; object-src 'self'",
  "browser_action": {
    "default_title": "Valor do dolar hoje",
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "assets/img/icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://api.promasters.net.br/cotacao/v1/valores?moedas=USD&alt=json"
  ]
}