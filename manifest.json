{
  "manifest_version": 2,

  "name": "Dólar Hoje",
  "description": "Extensão para te manter informado sobre o valor do dolar diariamente.",
  "version": "1.2",
  "content_security_policy": "script-src 'self' https://api.fixer.io; object-src 'self'",

  "browser_action": {
    "default_title" : "Valor do dolar hoje",
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "assets/img/icon128.png"
  },

  "permissions": [
    "activeTab",
    "https://api.fixer.io/latest?base=USD"
  ]
}
